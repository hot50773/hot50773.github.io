.calculating {
  height 5700px
  width 100vw
  background my-pink
  .text-block {
    position fixed
    z-index 20
    color black
  }

  .small-circle {
    border-radius 50%
  }
}

.trigger1, .trigger2, .trigger3, .trigger4 {
  position relative
}

.trigger1 {
  top 100vh
}
.trigger2 {
  top 200vh
}
.trigger3 {
  top 300vh
}
.trigger4 {
  top 400vh
}